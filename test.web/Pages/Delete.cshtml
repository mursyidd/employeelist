@page
@model test.web.Pages.DeleteModel
@{
	ViewData["Title"] = "Delete page";
}

@* Note: Many of the "class=" instances reference Bootstrap sytles. *@

@* Begin render Delete code block *@
<form method="post">
	@* 	The id for the data record is hidden because it needs to be available to the 
		code-behind processing, but it's not displayed. *@
	<input hidden asp-for="EmployeeModel.id" />
	<div class="border p-3 mt-4" style="width:50%">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Delete Employee</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="EmployeeModel.username" class="h5"></label><br />
			@* Render the Username of the employee in a non-editable text box. *@
			<input type="text" asp-for="EmployeeModel.username" disabled />
			<span asp-validation-for="EmployeeModel.username" class="text-danger"></span>
		</div>
		@* Submit the changes or return to the Index page if the delete is cancelled.*@
		<button type="submit" class="btn btn-danger " style="width:150px;">Delete</button>
		<a asp-page="Index" class="btn btn-secondary" style="width:150px;">Cancel</a>
	</div>
</form>
@* End render Delete code block *@
